Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

Category: <%= @job.category.title %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>
<%= link_to "Edit", edit_company_job_path(@company, @job) %>
<%= link_to "Delete", company_job_path(@company, @job), method: :delete %>

<h3>Comments</h3>
<% @comments.reverse.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<h3>New Comment</h3>
<%= form_for @comment do |f| %>

  <%= f.hidden_field :job_id, value: @job.id %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
